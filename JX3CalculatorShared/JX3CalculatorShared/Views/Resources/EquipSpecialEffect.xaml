<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:JX3CalculatorShared.Views"
                    xmlns:userControls="clr-namespace:JX3CalculatorShared.Views.UserControls">

    <!--  装备特效_下拉列表数据模板  -->
    <DataTemplate x:Key="DataTemplate.EquipSpecialEffectItem">
        <userControls:EquipSpecialEffectItemView Width="150" Height="30" />
    </DataTemplate>

    <!--  装备特效_下拉列表  -->
    <Style
        x:Key="Style.EquipSpecialEffectSlotComboBox"
        BasedOn="{StaticResource Style.CenterComboBox}"
        TargetType="ComboBox">
        <Setter Property="Margin" Value="2,5" />
        <Setter Property="MinHeight" Value="35" />
        <Setter Property="MinWidth" Value="135" />
        <Setter Property="ItemTemplate" Value="{StaticResource DataTemplate.EquipSpecialEffectItem}"/>
    </Style>

    <!--  装备特效配置_列表数据模板  -->
    <DataTemplate x:Key="DataTemplate.EquipSpecialEffectSlot">
        <ComboBox Style="{StaticResource Style.EquipSpecialEffectSlotComboBox}" Margin="4,4,4,4"/>
    </DataTemplate>

    <!--  装备特效配置_列表样式  -->
    <Style x:Key="Style.EquipSpecialEffectConfig" TargetType="ItemsControl">
        <Setter Property="ItemTemplate" Value="{StaticResource DataTemplate.EquipSpecialEffectSlot}" />
        <Setter Property="ItemsSource" Value="{Binding Path=Data}" />
    </Style>

</ResourceDictionary>