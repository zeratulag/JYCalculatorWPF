<UserControl x:Class="JYCalculator.Views.UserControls.FullCharacterGroupDataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:JYCalculator.Views.UserControls"
             mc:Ignorable="d">
    <DataGrid
        Name="DataGrid_FullCharacterGroup"
        AutoGenerateColumns="False"
        FrozenColumnCount="1"
        HorizontalScrollBarVisibility="Auto"
        ItemsSource="{Binding}">

        <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding Path=Name}" Header="Name" />

            <DataGridTextColumn Binding="{Binding Path=BaseStrength, StringFormat=F1}" Header="基础力道" />

            <DataGridTextColumn Binding="{Binding Path=FinalStrength, StringFormat=F1}" Header="最终力道" />

            <DataGridTextColumn Binding="{Binding Path=PhysicsBaseAttackPower, StringFormat=F1}" Header="基础攻击" />

            <DataGridTextColumn Binding="{Binding Path=PhysicsFinalAttackPower, StringFormat=F1}" Header="最终攻击" />

            <DataGridTextColumn Binding="{Binding Path=PhysicsBaseOvercome, StringFormat=F1}" Header="基础破防" />

            <DataGridTextColumn Binding="{Binding Path=PhysicsFinalOvercome, StringFormat=F1}" Header="最终破防" />

            <DataGridTextColumn Binding="{Binding Path=PhysicsFinalOvercomeValue, StringFormat=P2}" Header="破防值" />

            <DataGridTextColumn Binding="{Binding Path=BaseWeaponDamage, StringFormat=F1}" Header="武伤" />

            <DataGridTextColumn Binding="{Binding Path=PhysicsCriticalStrikeRate, StringFormat=P2}" Header="会心率" />
            <DataGridTextColumn Binding="{Binding Path=PhysicsCriticalStrike, StringFormat=F1}" Header="会心等级" />
            <DataGridTextColumn Binding="{Binding Path=PhysicsCriticalStrikeValue, StringFormat=P2}" Header="会心值" />

            <DataGridTextColumn Binding="{Binding Path=PhysicsCriticalPowerValue, StringFormat=P2}" Header="会效" />

            <DataGridTextColumn Binding="{Binding Path=StrainRate, StringFormat=P2}" Header="无双率" />
            <DataGridTextColumn Binding="{Binding Path=BaseStrain, StringFormat=F1}" Header="基础无双" />
            <DataGridTextColumn Binding="{Binding Path=FinalStrain, StringFormat=F1}" Header="最终无双" />
            <DataGridTextColumn Binding="{Binding Path=FinalStrainValue, StringFormat=P2}" Header="无双值" />

            <DataGridTextColumn Binding="{Binding Path=BaseSurplus, StringFormat=F1}" Header="破招" />

            <DataGridTextColumn Binding="{Binding Path=Haste, StringFormat=F1}" Header="加速" />

            <DataGridTextColumn Binding="{Binding Path=StrengthPercent, StringFormat=P2}" Header="+力道" />

            <DataGridTextColumn Binding="{Binding Path=PhysicsAttackPowerPercent, StringFormat=P2}" Header="+攻击" />

            <DataGridTextColumn Binding="{Binding Path=PhysicsOvercomePercent, StringFormat=P2}" Header="+破防" />

            <DataGridTextColumn Binding="{Binding Path=StrainPercent, StringFormat=P2}" Header="+无双" />

            <DataGridTextColumn Binding="{Binding Path=AllShieldIgnore, StringFormat=P2}" Header="无视防御" />

            <DataGridTextColumn Binding="{Binding Path=PhysicsDamageAdd, StringFormat=P2}" Header="+伤害" />
            <DataGridTextColumn Binding="{Binding Path=EquipScore, StringFormat=F0}" Header="装分" />


        </DataGrid.Columns>
    </DataGrid>
</UserControl>