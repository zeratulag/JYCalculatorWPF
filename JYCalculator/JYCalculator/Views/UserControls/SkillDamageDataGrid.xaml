<UserControl
    x:Class="JYCalculator.Views.UserControls.SkillDamageDataGrid"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dgx="urn:tom-englert.de/DataGridExtensions"
    xmlns:local="clr-namespace:JYCalculator.Views.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="skillDamageDataGrid"
    mc:Ignorable="d">
    <Grid>
        <DataGrid
            dgx:DataGridFilter.IsAutoFilterEnabled="True"
            AutoGenerateColumns="False"
            FrozenColumnCount="1"
            ItemsSource="{Binding}"
            VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Name}" Header="Name" />
                <DataGridTextColumn Binding="{Binding Path=SkillName}" Header="技能" />

                <DataGridTextColumn Binding="{Binding Path=StdPhysicsDmg, StringFormat=F1}" Header="基准外伤" />

                <DataGridTextColumn Binding="{Binding Path=ClosingPhysicsDef, StringFormat=F1}" Header="外防" />

                <DataGridTextColumn Binding="{Binding Path=BearPhysicsDef, StringFormat=P2}" Header="外承伤" />

                <DataGridTextColumn Binding="{Binding Path=RealPhysicsDamage, StringFormat=F1}" Header="实际外伤" />
                <DataGridTextColumn Binding="{Binding Path=RealDamage, StringFormat=F1}" Header="实际伤害" />

                <DataGridTextColumn Binding="{Binding Path=CriticalStrikeValue, StringFormat=P2}" Header="会心" />
                <DataGridTextColumn Binding="{Binding Path=CriticalPowerValue, StringFormat=P2}" Header="会效" />
                <DataGridTextColumn Binding="{Binding Path=ExpectValue, StringFormat=F3}" Header="期望" />

                <DataGridTextColumn Binding="{Binding Path=FinalExpectDamage, StringFormat=F1}" Header="期望伤害" />
                <DataGridTextColumn Binding="{Binding Path=RelativeDamage, StringFormat=F2}" Header="相对伤害" />

                <DataGridTextColumn Binding="{Binding Path=Freq, StringFormat=F3}" Header="频率" />
                <DataGridTextColumn Binding="{Binding Path=DPS, StringFormat=F1}" Header="DPS" />

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
