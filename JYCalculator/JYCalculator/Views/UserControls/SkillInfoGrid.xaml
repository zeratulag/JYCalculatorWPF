<UserControl x:Class="JYCalculator.Views.UserControls.SkillInfoGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:JYCalculator.Views.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:sf="http://schemas.syncfusion.com/wpf"
             xmlns:data="clr-namespace:JYCalculator.Data"
             x:Name="skillInfoGrid">
    <sf:SfDataGrid AutoGenerateColumns="True"
                   AutoGeneratingColumn="SfDataGrid_AutoGeneratingColumn"
                   ItemsSource="{Binding}" ColumnSizer="Auto"
                   FrozenColumnCount="2"
                   AllowResizingColumns ="True"
                   AllowGrouping="True" AllowFiltering="True" ShowGroupDropArea="True">
        <sf:SfDataGrid.Columns>
            <sf:GridTextColumn MappingName="Name" />
            <sf:GridTextColumn MappingName="SkillName" />
            <sf:GridTextColumn MappingName="FightName" />
            <sf:GridCheckBoxColumn MappingName="IsDerived" />
        </sf:SfDataGrid.Columns>
    </sf:SfDataGrid>
</UserControl>